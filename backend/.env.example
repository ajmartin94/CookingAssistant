# Application Settings
APP_NAME=Cooking Assistant
APP_VERSION=1.0.0
DEBUG=False

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./cooking_assistant.db
DATABASE_ECHO=False

# Security Settings (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (add your frontend URLs) - Must be a JSON array
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# LLM Settings
# Model can be: "test", "gpt-4o", "claude-3-5-sonnet-20241022", "ollama/llama3", etc.
# Use "test" for deterministic test provider (E2E testing)
LLM_MODEL=test
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# Vector Database Settings (Phase 2)
VECTOR_DB_ENABLED=False
VECTOR_DB_PATH=./chroma_db

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880

# API Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Monitoring & Error Tracking
# Get your DSN from https://sentry.io
SENTRY_DSN=

# GitHub Integration (feedback â†’ GitHub issue creation)
# Optional: if not set, feedback is stored locally only
# GITHUB_PAT=ghp_your_personal_access_token
# GITHUB_REPO=owner/repository

# Seed Data (for development/demo - run: python -m scripts.seed)
# SEED_USER_EMAIL=demo@example.com
# SEED_USER_PASSWORD=demo-password-change-me
