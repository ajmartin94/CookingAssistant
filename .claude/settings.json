{
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "exit_plan_mode",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/save-plan.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/validate-bd-create.py"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/pre-commit-tdd.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/post-bd-close.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/save-plan.py"
          }
        ]
      }
    ]
  }
}
